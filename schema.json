{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Open Hadith JSON Dataset",
  "description": "JSON Schema for books, chapters, and Hadiths in multiple languages",
  "type": "object",
  "required": ["book_id", "book_data", "chapters", "hadiths", "meta"],
  "properties": {
    "book_id": {
      "type": "integer",
      "description": "Unique ID for the book"
    },
    "book_data": {
      "type": "object",
      "required": ["hadith_count", "arabic"],
      "properties": {
        "hadith_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Total number of Hadiths in this book"
        },
        "arabic": {
          "type": "object",
          "required": ["title", "author"],
          "properties": {
            "title": { "type": "string" },
            "author": { "type": "string" },
            "introduction": { "type": "string" }
          }
        },
        "english": {
          "type": "object",
          "required": ["title", "author"],
          "properties": {
            "title": { "type": "string" },
            "author": { "type": "string" },
            "introduction": { "type": "string" }
          }
        },
        "bangla": {
          "type": "object",
          "required": ["title", "author"],
          "properties": {
            "title": { "type": "string" },
            "author": { "type": "string" },
            "introduction": { "type": "string" }
          }
        }
      },
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "required": ["source", "languages", "last_updated", "version"],
      "properties": {
        "source": { "type": "string" },
        "languages": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "last_updated": { "type": "string" },
        "version": { "type": "string" },
        "generated_by": { "type": "string" },
        "license": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
